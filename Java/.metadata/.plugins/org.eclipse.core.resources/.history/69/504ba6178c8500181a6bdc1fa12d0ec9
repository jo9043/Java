	private void handleAddOneDayEvent() {
		String dateString;
		String title;

		System.out.print("\tWhen: ");
		dateString = kb.next();
		System.out.print("\tTitle: ");
		title = kb.next();
		
//		oneDayEvent ev = new OneDayEvent(title, );

	}

	public static void main(String[] args){
		Scheduler app = new Scheduler();
		app.processCommand();
	}
}

